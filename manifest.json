{
  "manifest_version": 3,
  "name": "How's Your Brainrot?",
  "version": "1.0.0",
  "description": "Detects brainrot on web pages, alerts you, and shows analytics of your brainrot.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.jpg",
      "48": "logo.jpg",
      "128": "logo.jpg"
    }
  },
  "icons": {
    "16": "logo.jpg",
    "48": "logo.jpg",
    "128": "logo.jpg"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
