{
  "manifest_version": 3,
  "name": "Brainrot Detector + Analyzer",
  "version": "1.0.0",
  "description": "Detects brainrot on web pages, alerts you, and shows analytics of your usage.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
